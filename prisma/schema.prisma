// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  date DateTime    @id @default(now())
  type MessageType
  text String

  mentionedArtifacts ArtifactEntry[]
  mentionedMessages  Message[]       @relation("messageMention")
  mentionedIn        Message[]       @relation("messageMention")
}

enum MessageType {
  NORMAL
  REJECT
  MARKER
}

model MessageInput {
  date           DateTime @id @default(now())
  prompt         String
  notifyEmail    String?
  sourceName     String?
  sourceLocation String?
  sourceVPN      String?
}

model ArtifactEntry {
  id          String       @id
  type        ArtifactType
  thumb       String?
  title       String
  date        DateTime
  mentionedIn Message[]
  unlisted    Boolean      @default(false)
  featured    Boolean      @default(false)
}

enum ArtifactType {
  Application
  Doodle
  Fragment
  Game
  Journal
  Music
  MusicVideo
  NerdGear
  Square
  Story
  Video
  WordMagnet
}

model Story {
  id          String    @id
  date        DateTime  @default(now())
  dateEnd     DateTime?
  title       String
  thumb       String?
  description String
  url         String
  tags        String[]
  unlisted    Boolean   @default(false)
}

model Video {
  id       String   @id
  date     DateTime @default(now())
  title    String
  tags     String[]
  thumb    String?
  media    String
  source   String?
  ttms     Float?
  unlisted Boolean  @default(false)
}

model Music {
  id       String   @id
  date     DateTime @default(now())
  title    String
  tags     String[]
  album    String?
  media    String
  unlisted Boolean  @default(false)
}

model Game {
  id                  String   @id
  date                DateTime @default(now())
  title               String
  description         String   @default("")
  shortDescription    String?
  web                 String?
  webAlwaysFullscreen Boolean  @default(false)
  source              String?
  downloads           Json[]
  banner              String?
  logo                String?
  screenshots         String[]
  themeBG             String?
  themeFG             String?
  themeAccent         String?
  unlisted            Boolean  @default(false)
}

model Application {
  id                  String   @id
  date                DateTime @default(now())
  title               String
  description         String
  web                 String?
  webAlwaysFullscreen Boolean  @default(false)
  downloads           Json[]
  unlisted            Boolean  @default(false)
}

model Upload {
  hash     String         @id
  date     DateTime       @default(now())
  filename String
  type     String
  blurhash String?
  width    Int
  height   Int
  duration Int? // for videos
  purpose  UploadPurpose?
}

enum UploadPurpose {
  MessageAttachment
  ArtifactData
}

model Donator {
  id   Int    @id @default(autoincrement())
  name String
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String
  bcrypt   String
  flags    Int       @default(0)
  sessions Session[] @relation("session")
}

model Session {
  uid    String   @id
  token  String   @unique
  date   DateTime @default(now())
  user   User     @relation("session", references: [id], fields: [userId])
  userId Int
}
