// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model ArtifactEntry {
  id String @id
  type String
  date DateTime
}

model Story {
  id String @id
  date DateTime @default(now())
  dateEnd DateTime?
  title String
  thumb String?
  description String
  url String
  tags String[]
}

model Donator {
  id Int @id @default(autoincrement())
  name String
}

model Message {
  date DateTime @id @default(now())
  type MessageType?
  text String
}

enum MessageType {
  NORMAL
  REJECT
}

model MessageInput {
  date DateTime @id @default(now())
  prompt String
  notifyEmail String
  sourceName String
  sourceLocation String
  sourceVPN String?
}

model Video {
  id String @id
  date DateTime @default(now())
  title String
  tags String[]
  thumb String?
  media String
}

model Song {
  id String @id
  date DateTime @default(now())
  title String
  tags String[]
  album String?
  media String
}

model Game {
  id String @id
  date DateTime @default(now())
  title String
  description String
  web String?
  webAlwaysFullscreen Boolean @default(false)
  downloads Json[]
  banner String?
  logo String?
}

model Application {
  id String @id
  date DateTime @default(now())
  title String
  description String
  web String?
  webAlwaysFullscreen Boolean @default(false)
  downloads Json[]
}

model Upload {
  hash String @id
  date DateTime @default(now())
  filename String
  mimetype String
  blurhash String?
  width Int?
  height Int?
  ratio String?
}